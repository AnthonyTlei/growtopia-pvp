// ========================================
// GENERATOR & DATASOURCE
// ========================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// ENUMS
// ========================================
enum Role {
  ADMIN
  OWNER
  USER
}

enum MatchStatus {
  PENDING
  COMPLETED
}

enum ReportStatus {
  PENDING
  CLOSED
  COMPLETED
}

// ========================================
// AUTHENTICATION MODELS (NextAuth.js)
// ========================================
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================
// USER MODEL
// ========================================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          Role      @default(USER)
  ign           String?
  acceptedTerms Boolean   @default(false) @map("accepted_terms")

  elo               Int @default(1200)
  ratedMatchesCount Int @default(0)

  accounts Account[]
  sessions Session[]

  matches        MatchParticipant[]
  matchesWon     Match[]            @relation("MatchWinner")
  createdMatches Match[]            @relation("MatchCreator")
  createdReports Report[]           @relation("ReportCreator")

  ban        Ban?  @relation("UserBan")
  bansIssued Ban[] @relation("BanActor")

  @@map("users")
}

// ========================================
// MATCH PARTICIPANT
// ========================================
model MatchParticipant {
  match   Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String

  score Int @default(0)

  eloBefore Int?
  eloAfter  Int?
  eloDelta  Int?

  @@id([matchId, userId])
  @@index([userId])
  @@index([matchId])
}

// ========================================
// MATCH
// ========================================
model Match {
  id String @id @default(cuid())

  createdBy   User?   @relation("MatchCreator", fields: [createdById], references: [id], onDelete: SetNull)
  createdById String?

  participants MatchParticipant[]

  winner   User?   @relation("MatchWinner", fields: [winnerId], references: [id], onDelete: SetNull)
  winnerId String?

  rated Boolean @default(false)

  createdAt   DateTime  @default(now()) @db.Timestamptz(3)
  completedAt DateTime? @db.Timestamptz(3)

  status MatchStatus @default(PENDING)

  ratingAppliedAt  DateTime?
  ratingRevertedAt DateTime?

  reports      Report[]
  reportsCount Int      @default(0)

  @@index([winnerId])
  @@index([createdAt, id])
  @@index([reportsCount])
}

// ========================================
// REPORT
// ========================================
model Report {
  id     String       @id @default(cuid())
  status ReportStatus @default(PENDING)

  createdBy   User   @relation("ReportCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String

  match   Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)
  matchId String

  message String? @db.Text

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt

  @@unique([matchId, createdById])
  @@index([matchId])
  @@index([status])
}

// ========================================
// BAN (one row per banned user)
// ========================================
model Ban {
  id String @id @default(cuid())

  user   User   @relation("UserBan", fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique

  bannedBy   User   @relation("BanActor", fields: [bannedById], references: [id], onDelete: Cascade)
  bannedById String

  reason    String?  @db.Text
  createdAt DateTime @default(now()) @db.Timestamptz(3)

  @@index([bannedById])
  @@index([createdAt])
}
